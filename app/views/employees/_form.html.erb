<%= simple_form_for(@employee, html: { class: 'bg-gray-800 p-10 rounded-lg mx-auto' }) do |f| %>
  <%= f.error_notification %>

  <fieldset class="my-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <%= f.input :first_name,
                    label_html: { class: "text-gray-300 mb-2" },
                    input_html: { class: "form-input bg-gray-700 border-gray-600 text-white placeholder-gray-400 rounded-lg" },
                    wrapper: false %>
      </div>
      <div>
        <%= f.input :last_name,
                    label_html: { class: "text-gray-300 mb-2" },
                    input_html: { class: "form-input bg-gray-700 border-gray-600 text-white placeholder-gray-400 rounded-lg" },
                    wrapper: false %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div>
        <%= f.input :department,
                    collection: Employee.departments.keys.map { |department| [I18n.t("activerecord.attributes.employee.departments.#{department}"), department] },
                    label_html: { class: "text-gray-300 mb-2" },
                    input_html: { class: "form-select bg-gray-700 border-gray-600 text-white placeholder-gray-400 rounded-lg" },
                    wrapper: false,
                    prompt: I18n.t(:'labels.prompts.defaults.department') %>
      </div>
      <div>
        <%= f.input :role,
                    collection: Employee.roles.keys.map { |role| [I18n.t("activerecord.attributes.employee.roles.#{role}"), role] },
                    label_html: { class: "text-gray-300 mb-2" },
                    input_html: { class: "form-select bg-gray-700 border-gray-600 text-white placeholder-gray-400 rounded-lg" },
                    wrapper: false,
                    prompt: I18n.t(:'labels.prompts.defaults.role') %>
      </div>
    </div>

    <div>
      <%= f.input :email,
                  label_html: { class: "text-gray-300 mb-2" },
                  input_html: { class: "form-input bg-gray-700 border-gray-600 text-white placeholder-gray-400 rounded-lg" },
                  wrapper: false %>
    </div>

    <div class="mt-6">
      <label class="block text-gray-300 mb-2">Photo</label>
      <label class="flex items-center justify-center bg-gray-700 text-blue rounded-lg shadow-lg tracking-wide uppercase border border-blue cursor-pointer hover:bg-blue-700 hover:text-white px-4 py-6 w-full">
        <span class="text-gray-300">Select a photo</span>
        <%= f.file_field :photo, class: "hidden" %>
      </label>
    </div>

    <div class="mt-6">
      <%= f.button :submit, "Add Employee", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg" %>
    </div>
  </fieldset>
<% end %>
