<div class="bg-gray-800 text-white min-h-screen">
  <p class="text-green-500 p-4"><%= notice %></p>

  <h1 class="text-3xl font-semibold text-center py-5"><%= I18n.t(:employees) %></h1>

  <div class="container mx-auto px-6 max-w-2xl">
    <div id="employees" class="grid md:grid-cols-2 gap-4">
      <% @employees.each do |employee| %>
        <div class="flex items-center space-x-4 bg-gray-900 p-4 rounded-lg">
          <% if employee.photo.attached? %>
            <%= image_tag(employee.photo, alt: employee.full_name, class: "rounded-full w-16 h-16 object-cover") %>
          <% end %>
          <div>
            <%= link_to employee.full_name, employee_path(employee), class: "text-lg font-medium" %>
            <div class="text-gray-400"><%= I18n.t("activerecord.attributes.employee.departments.#{employee.department}") %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
